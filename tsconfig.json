{
  "compilerOptions": {
    "rootDir": "./src",
    "target": "es6",
    "module": "commonjs",
    "lib": ["dom", "es6", "es2017", "esnext.asynciterable"],
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "**/__mocks__/*",
    "**/test/*",
    "**/src/**/*.spec.ts"
  ]
}
